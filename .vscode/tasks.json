{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build(Debug)",
			"type": "shell",
			"command": "source tool/build.sh ${relativeFile}",
		},
		{
			"label": "Build(Release)",
			"type": "shell",
			"command": "source tool/build.sh ${relativeFile} R",
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "ulimit -s 1048576 && case ${file} in *.cpp) res/a.out<test/tc/in ;; *.py) stickytape ${file} --add-python-path libpy > res/submit.py && python3 ${file} < test/tc/in ;; *.sh) chmod +x ${file} && ${file} ;; *) echo Unknown Extension ;; esac",
		},
		{
			"label": "Run with time",
			"type": "shell",
			"command": "ulimit -s 1048576 && /usr/bin/time -v res/a.out<test/tc/in 2> >(awk '/User/||/System/||/Elap/||/Max/')",
		},
		{
			"label": "RunAll",
			"type": "shell",
			"command": "ulimit -s 1048576 && test/tc.sh",
		},
		{
			"label": "tc_save",
      "type": "shell",
      "command": "node tool/tcsaver.js",
      "runOptions": {
        "runOn": "folderOpen"
      }
		}
	],
