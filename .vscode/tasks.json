{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run(Debug)",
			"type": "shell",
			"command": "ulimit -s 1048576 && case ${file} in *.cpp) tool/build.sh ${relativeFile} D && res/${fileBasenameNoExtension}D.out<test/tc/in ;; *.py) stickytape ${file} --add-python-path libpy > res/submit.py && python3 ${file} < test/tc/in ;; *.sh) chmod +x ${file} && ${file} ;; *) echo '${fileExtname} isnt supported (available: cpp,py,sh)' ;; esac",
		},
		{
			"label": "Run(Release)",
			"type": "shell",
			"command": "ulimit -s 1048576 && tool/build.sh ${relativeFile} R && /usr/bin/time -v res/${fileBasenameNoExtension}R.out<test/tc/in 2> >(awk '/User/||/System/||/Elap/||/Max/')",
		},
		{
			"label": "RunAll(Debug)",
			"type": "shell",
			"command": "ulimit -s 1048576 && tool/build.sh ${relativeFile} D && test/tc.sh res/${fileBasenameNoExtension}D.out",
		},
		{
			"label": "RunAll(Release)",
			"type": "shell",
			"command": "ulimit -s 1048576 && tool/build.sh ${relativeFile} R && test/tc.sh res/${fileBasenameNoExtension}R.out",
		},
		{
			"label": "tc_save",
      "type": "shell",
      "command": "node tool/tcsaver.js",
      "runOptions": {
        "runOn": "folderOpen"
      }
		}
	],
