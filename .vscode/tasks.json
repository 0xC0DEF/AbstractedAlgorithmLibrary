{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run(Debug)",
			"type": "shell",
			"command": "tool/exec.sh build/${relativeFile}/Debug/ps.cpp",
			"dependsOn": "Build(Debug)"
		},
		{
			"label": "Run(Release)",
			"type": "shell",
			"command": "/usr/bin/time -v tool/exec.sh build/${relativeFile}/Release/ps.cpp 2> >(awk '/Elap|Max/')",
			"dependsOn": "Build(Release)"
		},
		{
			"label": "RunAll(Debug)",
			"type": "shell",
			"command": "tool/tc.sh build/${relativeFile}/Debug/ps.cpp",
			"dependsOn": "Build(Debug)"
		},
		{
			"label": "RunAll(Release)",
			"type": "shell",
			"command": "tool/tc.sh build/${relativeFile}/Release/ps.cpp",
			"dependsOn": "Build(Release)"
		},
		{
			"label": "Build(Debug)",
			"type": "shell",
			"command": "case ${file} in *.cpp) tool/build_cmake.sh ${relativeFile} Debug ;; *) echo '${fileExtname} is unknown' && false ;; esac",
		},
		{
			"label": "Build(Release)",
			"type": "shell",
			"command": "case ${file} in *.cpp) tool/build_cmake.sh ${relativeFile} Release ;; *) echo '${fileExtname} is unknown' && false ;; esac",
		},
		{
			"label": "tc_save",
			"type": "shell",
			"command": "node tool/tcsaver.js",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	],
	// "inputs": [
