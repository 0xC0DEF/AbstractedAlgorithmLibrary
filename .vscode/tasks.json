{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build(Debug)",
			"type": "shell",
			"command": "source ./tool/build.sh ${relativeFile}",
		},
		{
			"label": "Build(Release)",
			"type": "shell",
			"command": "source ./tool/build.sh ${relativeFile} R",
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "case ${file} in *.py) python3 ${file} < in ;; *) ulimit -s 1048576 && ./a.out<in ;; esac",
		},
		{
			"label": "Run with time",
			"type": "shell",
			"command": "ulimit -s 1048576 && /usr/bin/time -v ./a.out<in",
		}
	],
