{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run(Debug)",
			"type": "shell",
			"command": "tool/exec.sh ${fileBasenameNoExtension}D",
			"dependsOn": "Build(Debug)"
		},
		{
			"label": "Run(Release)",
			"type": "shell",
			"command": "/usr/bin/time tool/exec.sh ${fileBasenameNoExtension}R 2> >(awk '/Elap|Max/')",
			"dependsOn": "Build(Release)"
		},
		{
			"label": "RunAll(Debug)",
			"type": "shell",
			"command": "test/tc.sh res/${fileBasenameNoExtension}D.out",
			"dependsOn": "Build(Debug)"
		},
		{
			"label": "RunAll(Release)",
			"type": "shell",
			"command": "test/tc.sh res/${fileBasenameNoExtension}R.out",
			"dependsOn": "Build(Release)"
		},
		{
			"label": "Build(Debug)",
			"type": "shell",
			"command": "case ${file} in *.cpp) tool/build.sh ${relativeFile} D ;; *) echo '${fileExtname} is unknown' && false ;; esac",
		},
		{
			"label": "Build(Release)",
			"type": "shell",
			"command": "case ${file} in *.cpp) tool/build.sh ${relativeFile} R ;; *) echo '${fileExtname} is unknown' && false ;; esac",
		},
		{
			"label": "tc_save",
      "type": "shell",
      "command": "node tool/tcsaver.js",
      "runOptions": {
        "runOn": "folderOpen"
      }
		}
	],
