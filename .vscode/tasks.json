    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c", "\"",
                "g++","-iquote","./Includes","${relativeFile}",
                "&&","./merger.out","main.cpp","./Includes",
                "&&","echo","Build","Succeed.",
                "\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Build(Debug)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c", "\"",
                "g++","-iquote","./Includes","-g","-O0","-D","DEBUG","${relativeFile}",
                "&&","./merger.out","main.cpp","./Includes",
                "&&","echo","'Build(Debug)","Succeed.'",
                "\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "dependsOn": ["Build"],
            "command": "bash -c ./a.out",
            "problemMatcher": []
        }
    ]
}