    "version": "2.0.0",
    "tasks": [
        {
            "label": "build(Debug)",
            "type": "shell",
            "command": "g++",
            "args": ["-g",
            "-std=c++17",
            "main.cpp",
            "&&",
            "echo",
            "Build",
            "Succeed.",
            "&&",
            "merger.exe",
            "main.cpp",
            "&&",
            "echo",
            "Merge",
            "Succeed."],
            "problemMatcher": []
        },
        {
            "label": "build(Release)",
            "type": "shell",
            "command": "g++ -std=c++17 main.cpp && echo Build Succeed. && merger.exe main.cpp && echo Merge Succeed.",
            "problemMatcher": []
        },
        {
            "label": "run(Release)",
            "type": "shell",
            "command": "g++ -std=c++17 main.cpp && echo Build Succeed. && merger.exe main.cpp && echo Merge Succeed. && a.exe",
            "problemMatcher": []
        }
    ]
}