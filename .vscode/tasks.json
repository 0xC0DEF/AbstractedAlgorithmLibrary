    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++ -iquote ./Includes ${relativeFile} && ./merger.out main.cpp ./Includes && echo Build Succeed.",
        },
        {
            "label": "Build(Debug)",
            "type": "shell",
            "command": "g++ -iquote ./Includes -g -O0 -D DEBUG ${relativeFile} && ./merger.out main.cpp ./Includes && echo 'Build(Debug) Succeed.'"
        },
        {
            "label": "Run",
            "type": "shell",
            "dependsOn": ["Build"],
            "command": "./a.out"
        }
    ]
}